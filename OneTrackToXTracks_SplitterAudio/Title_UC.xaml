<UserControl x:Class="OneTrackToXTracks_SplitterAudio.Title_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OneTrackToXTracks_SplitterAudio"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" x:Name="_index" Text="[00]" Margin="3" VerticalAlignment="Center"/>
        
        <xctk:TimeSpanUpDown Grid.Column="1" x:Name="_deb" Width="95" ShowDays="False" CurrentDateTimePart="Millisecond" />
        
        <TextBlock Grid.Column="2" Text="→" Margin="3" VerticalAlignment="Center"/>

        <xctk:TimeSpanUpDown Grid.Column="3" x:Name="_fin" Width="95" ShowDays="False" CurrentDateTimePart="Millisecond"/>

        <TextBlock Grid.Column="4" x:Name="_title" Margin="3" Text="TITLE" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
